{
  "version": "2.0.0",
  "command": "mix",
  "tasks": [
    {
      "label": "Build",
      "command": "mix",
      "type": "shell",
      "args": [
        "compile"
      ],
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Test",
      "command": "mix",
      "type": "process",
      "args": [
        "test"
      ],
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Format",
      "command": "mix",
      "type": "process",
      "args": [
        "format.all"
      ],
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ]
    },
    {
      "label": "Lint",
      "command": "mix",
      "type": "process",
      "args": [
        "credo"
      ],
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ]
    },
    {
      "label": "Type checking",
      "command": "mix",
      "type": "process",
      "args": [
        "dyalizer"
      ],
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ]
    }
  ]
}